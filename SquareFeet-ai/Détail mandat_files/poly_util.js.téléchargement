function maskPhone(pThis) { 
  $(pThis).unmask;
  value = $(pThis).val();

  value = value.replace(/ /g,"");
  value = value.replace(/-/g,"");
  value = value.replace(/\(|\)/g,"");

  telLght = value.length;

  if (telLght < 10 || telLght > 11  ) {
    $(pThis).mask("?99999999999999");
  }

  if (telLght === 10 ) {
    $(pThis).mask("999-999-9999?9999");
  }

  if (telLght === 11 ) {
    $(pThis).mask("9-999-999-999?9999");
  }
}
